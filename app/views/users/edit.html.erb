<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>User info</h1>
      <% if @user.errors.any? %>
      　<h3><%= pluralize(@user.errors.count ,"error") %> prohibited this obj from being saved:</h3>
      　<ul>
      　<% @user.errors.full_messages.each do |message| %>
      　　<li><%= message %></li>
      　<% end %>
      　</ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Image</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
        </div>
        <div class="form-group">
          <label>Introduction</label>
          <%= f.text_area :introduction, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
