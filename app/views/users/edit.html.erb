<h1>User info</h1>
<%= form_with model: @user do |f| %>
  <label>Name</label><br>
  <%= f.text_field :name, autofocus: true %><br>
  <label>Image</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <label>Introduction</label><br>
  <%= f.text_area :introduction, autofocus: true %><br>
  <%= f.submit "Update User" %><br>
<% end %>