<div class="container">
  <% if @book.errors.any? %>
  <h3><%= pluralize(@book.errors.count ,"error") %> prohibited this obj from being saved:</h3>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render './left_contents', book: @book, user: @user %> <!--部分テンプレート呼出-->
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead class="font-weight-bold">
          <tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
            <td></td>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %> <!--投稿した人のuser_pathに飛びたい-->
                <%= image_tag book.get_image(80,80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id)%>
            </td>
            <td><%= book.body %></td>
            <td></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>